<h1><%= t('attributes') %></h1>

<table>
  <tr>
    <th><%= t('title') %></th>
  </tr>

  <% @attributes.each do |attribute| %>
      <tr>
        <td><%= attribute.title %></td>
        <td><%= link_to t('edit'), edit_attribute_path(attribute) %></td>
        <td><%= link_to t('delete'), attribute_path(attribute),
                        method: :delete,
                        data: { confirm: t('are_you_sure') } %></td>
      </tr>
  <% end %>
</table>
<%= link_to t('new_attribute'), new_attribute_path %>