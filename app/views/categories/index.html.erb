<h1><%= t('categories') %></h1>

<table>
  <tr>
    <th><%= t('title') %></th>
  </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to t('show'), category_path(category) %></td>
        <td><%= link_to t('edit'), edit_category_path(category) %></td>
        <td><%= link_to t('delete'), category_path(category),
                        method: :delete,
                        data: { confirm: t('are_you_sure') } %></td>
      </tr>
  <% end %>
</table>
<%= link_to t('new_category'), new_category_path %>