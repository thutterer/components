<table border="0">
  <tr>
    <td width="75"><%= image_tag("attributesXL.png", :alt => "sign_up")%></td>
    <td><h4><strong><%= t('sign_up') %></strong></h4></td>
    </tr>
  </table><br/>

<div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= t('sign_up') %></strong>
      </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
      <div class="panel-body">
        <h4><strong><%= t('email') %></strong></h4>
        <div class="form-group">
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
        </div>
        <h4><strong><%= t('password') %></strong></h4>
        <div class="form-group"
          <%= f.label t('password') %>
          <% if @minimum_password_length %>
          <em>(<%= "min. #{@minimum_password_length.to_s} #{t('chars')}"%>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
        </div>
        <div class="form-group">
          <h4><strong><%= t('password_confirm') %></strong></h4>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>
        <p>
            <%= f.submit t('sign_up'), :class => "btn btn-primary" %>
        </p>
        <%= render "devise/shared/links" %>
      </div>
<% end %>

